<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/png" href="images/logo.png"/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <title>List Movie</title>
</head>
<body ng-controller="listMovieController">
    <div ng-include="'html/header.html'"></div>
    <!-- {{hung}} -->
    <content>
        <div class="container">
            <div class="custom-select select-film" style="display: inline">
                <select data-inline="true" style="float: left" ng-model="selectKind" ng-change="followKind(selectKind)">  
                    <option value="">Tất Cả Phim</option>
                    <option value="Hành Động">Hành Động</option>
                    <option value="Hoạt Hình">Hoạt Hình</option>
                    <option value="Viễn Tưởng">Viễn Tưởng</option>
                    <option value="Tình Cảm">Tình Cảm</option>
                    <option value="Kinh Dị">Kinh Dị</option>
                </select>
                <select data-inline="true" style="float: left" ng-model="sortMovie1" ng-change="changeSort(sortMovie1)"> 
                    <option value="" disabled>Lọc Theo Ngày Khởi Chiếu</option>
                    <option value="-date">Phim Mới Nhất</option>
                    <option value="date">Phim cũ nhất</option>
                </select>
                <select data-inline="true" style="float: left"  ng-model="sortMovie2" ng-change="changeSort(sortMovie2)">  
                    <option value="" disabled>Lọc Theo Ngày Tạo Phim</option>
                    <option value="-createdTime">Phim Mới Nhất</option>
                    <option value="createdTime">Phim cũ nhất</option>
                </select>
                <select data-inline="true" style="float: left" ng-model="sortMovie3" ng-change="changeSort(sortMovie3)"> 
                    <option value="" disabled>Lọc Theo Tên</option>
                    <option value="name">A - Z</option>
                    <option value="-name">Z - A</option>
                </select>
                <div class="form-group box-search" style="float: right">
                    <input type="text" class="form-control" id="usr" placeholder="Tìm kiếm" ng-model=searchText>
                    <!-- <p ng-model="giatri">{{sortby}}</p> -->
                    <!-- <p ng-model="giatri">{{searchText}}</p> -->
                    <!-- <p ng-model="giatri">{{selectKind}}</p> -->
                    <!-- <button ng-click="test()">Hung</button> -->
                    
                </div>
            </div>
            <div class="show-movie" ng-init="showListMovie()">
                <div class="row">
                    <div class="col-md-4 item-film" ng-show='sortOne' ng-repeat="movie in listMovie | filter: selectKind | filter: searchText | orderBy: sortby">
                    <!-- <div class="col-md-4 item-film" ng-show="sortTwo" ng-repeat="movie in listMovie | orderBy: sortMovie3: sortMovie2: sortMovie1 | filter: searchText">
                    <div class="col-md-4 item-film" ng-show="sortThe" ng-repeat="movie in listMovie | orderBy: sortMovie2: sortMovie1: sortMovie3 | filter: searchText"> -->
                        <a href="/movie/{{movie._id}}">
                            <div class="fiml">
                                <img src="https://i.ibb.co/7RBx9xq/film.jpg" alt="icon phim">
                                <div class="desription">
                                    <h2 class="d-name-film">{{movie.name}}</h2>
                                    <hr class="hr-fiml">
                                    <p class=show-kind>{{movie.kind}}</p>
                                    <p class="show-des">{{movie.date | date: 'dd/MM/yyyy'}}</p>
                                    <p class="show-des">{{movie.description}}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </content>
    <footer>
        <div ng-include=" 'html/footer.html' "></div>
    </footer>
</body>
</html>
<script src="javascripts/listMovie.js"></script>
