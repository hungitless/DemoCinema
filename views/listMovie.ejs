<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/png" href="images/logo.png"/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <title>List Movie</title>
</head>
<body>
    <div ng-include="'html/header.html'"></div>
    <content>
        <div class="container" ng-controller="myCrtlListMovie">
            <div class="custom-select select-film" style="display: inline">
                <select data-inline="true" style="float: left"> 
                    <option value="0">Tất Cả Phim</option>
                    <option value="1">Hành Động</option>
                    <option value="2">Hoạt Hình</option>
                    <option value="3">Viễn Tưởng</option>
                    <option value="4">Tình Cảm</option>
                    <option value="5">Kinh Dị</option>
                </select>
                <select data-inline="true" style="float: left"> 
                    <option value="0">Lọc Theo Ngày Khởi Chiếu</option>
                    <option value="1">Phim Mới Nhất</option>
                    <option value="2">Phim cũ nhất</option>
                </select>
                <select data-inline="true" style="float: left"> 
                    <option value="0">Lọc Theo Ngày Tạo Phim</option>
                    <option value="-date">Phim Mới Nhất</option>
                    <option value="date">Phim cũ nhất</option>
                </select>
                <select data-inline="true" style="float: left" ng-model="sortMovie"> 
                    <option value="0">Lọc Theo Tên</option>
                    <option value="name">A - Z</option>
                    <option value="-name">Z - A</option>
                </select>
                <div class="form-group box-search" style="float: right">
                    <input type="text" class="form-control" id="usr" placeholder="Tìm kiếm">
                </div>
            </div>
            <div class="show-movie" ng-init="showListMovie()">
                <div class="row">
                    <div class="col-md-4 item-film" ng-repeat="movie in listMovie">
                        <a href="/movie/{{movie._id}}">
                            <div class="fiml">
                                <img src="https://i.ibb.co/7RBx9xq/film.jpg" alt="icon phim">
                                <div class="desription">
                                    <h2 class="d-name-film">{{movie.name}}</h2>
                                    <hr class="hr-fiml">
                                    <p class=show-kind>{{movie.kind}}</p>
                                    <p class="show-des">{{movie.date | date: 'dd/MM/yyyy'}}</p>
                                    <p class="show-des">{{movie.description}}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </content>
    <footer>
        <div ng-include=" 'html/footer.html' "></div>
    </footer>
</body>
</html>
<script src="javascripts/listMovie.js"></script>
